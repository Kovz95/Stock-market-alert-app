[Unit]
Description=Stock Alert Daily/Weekly Scheduler (Docker)
After=network-online.target stockalert-app.service
Wants=network-online.target

[Service]
Type=simple
User=appuser
Group=appuser
WorkingDirectory=/app
Environment="PATH=/app/.venv/bin:/usr/local/bin:/usr/bin:/bin"
EnvironmentFile=-/app/.env
ExecStart=/app/.venv/bin/python -m src.services.auto_scheduler_v2
Restart=always
RestartSec=30
StandardOutput=journal
StandardError=journal
SyslogIdentifier=stockalert-scheduler

NoNewPrivileges=true
PrivateTmp=true
ReadWritePaths=/app

[Install]
WantedBy=multi-user.target
